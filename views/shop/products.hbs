<div class="breadcrumb-area bg-gray">
    <div class="container">
        <div class="breadcrumb-content text-center">
            <ul>
                <li>
                    <a href="index.html">Home</a>
                </li>
                <li class="active">Shop </li>
            </ul>
        </div>
    </div>
</div>

<div class="shop-area pt-120 pb-120">
    <div class="container">
        <div class="row flex-row-reverse">
            <div class="col-lg-9">

                <div class="shop-topbar-wrapper">

                </div>
                <div class="shop-bottom-area">
                    <div class="tab-content jump">
                        <div id="shop-1" class="tab-pane active">
                            <div class="row">
                                {{#if products}}
                                {{#each products}}
                                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 col-12">
                                    <div class="single-product-wrap mb-35">
                                        <div class="product-img product-img-zoom mb-15">
                                            <a href="/shop/product/{{this.id}}">
                                                <img src="{{this.image}}" alt="" style="max-height: 180px;">
                                            </a>

                                        </div>
                                        <div class="product-content-wrap-2 text-center">

                                            <h3><a href="product-details.html">{{this.description}}</a></h3>
                                            <div class="product-price-2">
                                                <span>N {{this.price}}</span>
                                            </div>
                                        </div>
                                        <div class="product-content-wrap-2 product-content-position text-center">

                                            {{!-- <h3><a href="product-details.html">Basic Joggin Shorts</a></h3>
                                            <div class="product-price-2">
                                                <span>$20.50</span>
                                            </div> --}}
                                            <form class="add-to-cart" action="/shop/product/cart/add" method="POST">
                                                <div class="alert alert-success text-center d-none" role="alert">
                                                    A simple primary alertâ€”check it out!
                                                </div>
                                                <div class="form-group">
                                                    <input type="hidden" name="_csrf" value="{{csrfToken}}">
                                                </div>
                                                <input type="hidden" name="productId" value="{{this.id}}">
                                                <input type="hidden" name="quantity" value="1" />
                                                <div class="pro-add-to-cart">
                                                    <button type="submit" title="Add to Cart">Add To Cart</button>
                                                </div>
                                            </form>

                                        </div>
                                    </div>
                                </div>
                                {{/each}}

                                {{/if}}
                            </div>
                        </div>

                    </div>
                    <div class="pro-pagination-style text-center mt-10">
                        <ul>
                            <li><a class="prev" href="#"><i class="icon-arrow-left"></i></a></li>
                            <li><a class="active" href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a class="next" href="#"><i class="icon-arrow-right"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
            {{> sidebar-shop}}
        </div>
    </div>
</div>